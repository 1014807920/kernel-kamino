/dts-v1/;
/* First 4KB has trampoline code for secondary cores. */
/* /memreserve/ 0x00000000 0x0001000; */

#include "leo.dtsi"

/ {
	model = "nationalchip leo_gx8010_rkd_4v SoC";
	compatible = "nationalchip,leo_gx8010_rkd_4v_1v", "nationalchip,leo";

	chosen {
		bootargs = "earlyprintk";
		stdout-path = "serial0:115200n8";
	};

	memory {
		name = "memory";
		device_type = "memory";
		reg = <0x10000000 0x8000000>;
	};

	aliases {
		/* this allow the ethaddr uboot environmnet variable contents
		 * to be added to the gmac1 device tree blob.
		 */
	};

	regulator_3_3v: vcc3p3-regulator {
		compatible = "regulator-fixed";
		regulator-name = "VCC3P3";
		regulator-min-microvolt = <3300000>;
		regulator-max-microvolt = <3300000>;
	};

	a7_key:a7_key@0x2305008{
		compatible = "nationalchip,LEO-keypad";
		reg = <0x230501c 0x90>;
		autorepeat;
	};

	csky_key:csky_key@0x305004{
		compatible = "nationalchip,LEO-keypad";
		reg = <0x30501c 0x90>;
		autorepeat;

        key1:key1{
			key_code  = <KEY_MUTE>;
			key_gpio = <7>;
		};
        key2:key2{
			key_code  = <KEY_VOLUMEUP>;
			key_gpio = <8>;
		};
        key3:key3{
			key_code  = <KEY_VOLUMEDOWN>;
			key_gpio = <21>;
		};
	};
	urat1_control{
		compatible = "nationalchip,LEO_uart_control";
		reg = <0x02308000 0x1000>;
		val = <0x01>;
		cts-gpio = <&gpa0 9 GPIO_ACTIVE_HIGH>;
		rts-gpio = <&gpa0 10 GPIO_ACTIVE_HIGH>;
	};

	gxasoc-machine {
		name = "gxasoc-machine";
		compatible = "NationalChip,ASoc-Machine";
		num_codecs = <1>;
		codec-name     = "gxasoc-lodac";
		codec-dai-name = "gxasoc-lodac-dai";
		platform-name  = "gxasoc-platform";
		cup-dai-name   = "gxasoc-platform-dai";
		status = "okay";
	};

	gxasoc-platform {
		dev-name   = "gxasoc-platform";
		compatible = "NationalChip,ASoc-Platform";
		reg = <0x01200000 0xf4>;
		reg-names = "gxasoc.aout.regs";
		status = "okay";
	};

	gxasoc-codec {
		dev-name   = "gxasoc-lodac";
		compatible = "NationalChip,ASoc-Lodac";
		reg = <0x0030a1a0 0xc>;
		reg-names = "gxasoc.lodac.regs";
		status = "okay";
	};

	gxasoc-platform_dai {
		dev-name   = "gxasoc-platform-dai";
		compatible = "NationalChip,ASoc-Platform_Dai";
		status = "okay";
	};

	v4l2 {
		compatible = "NationalChip,BT1120-Video";
		i2c_bus = <0>;
		reset-gpio = <&gpa0 5 GPIO_ACTIVE_HIGH>;
		powerdown-gpio = <&gpa0 12 GPIO_ACTIVE_HIGH>;
		clocks = <&clk_bt1120>,
			<&bt1120_div>,
			<&bt1120_ddr>;
		clock-names = "xvclk",
			"gx.bt1120_div.clk",
			"gx.bt1120_ddr.clk";

		reg = <0x04d00000 0x1bc>,
			<0x0230a000 0x1c>;
		reg-names = "gx.bt1120.regs",
			"gx.bt1120.reset_regs";
		interrupts = <47>;
		interrupt-names = "gx.bt1120.irqs";
		status = "okay";
	};
};

&ck_i2c0{
	status = "okay";
};

&spi0{
	status = "okay";

	/* spi nor flash */
	/*M25P@0 {
		compatible = "jedec,spi-nor";
		spi-max-frequency = <85000000>;
		reg = <1>;
		status = "okay";

		partitions {
			#address-cells = <1>;
			#size-cells = <1>;
			compatible = "fixed-partitions";
			scpu {		reg = <0x000000 0x100000>; };
