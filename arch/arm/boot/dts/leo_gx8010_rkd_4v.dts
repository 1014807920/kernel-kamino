		};
	};*/

	/* spi nand flash */
	spinand_mcu@0 {
		compatible = "spinand";
		spi-max-frequency = <85000000>;
		reg = <0>;
		status = "okay";

		partitions {
			#address-cells = <1>;
			#size-cells = <1>;
			compatible = "fixed-partitions";
			scpu {		reg = <0x000000 0x100000>; };
			uboot_stage1 {	reg = <0x100000 0x40000>;  };
			uboot_env {	reg = <0x140000 0x40000>;  };
			uboot_stage2 {	reg = <0x180000 0x80000>;  };
			boot_music {	reg = <0x200000 0x80000>;  };
			kernel_dtb {	reg = <0x280000 0x80000>;  };
			kernel {	reg = <0x300000 0x700000>; };
			rootfs {	reg = <0xa00000 0x7600000>;};
		};
	};
};

&mmc0{
	status = "disabled";
};

&spi1{
       lcd0: st7796s@0{
               compatible = "sitronix,st7796s";
               reg = <0>;
               status = "okay";
               spi-max-frequency = <15000000>;
               regwidth = <8>;
               width = <320>;
               height = <320>;
               buswidth = <8>;
               bpp = <16>;
               bgr = <1>; 
               /*init; */
               dc-gpios = <&ck_gpa0 15 GPIO_ACTIVE_HIGH>;
               reset-gpios = <&ck_gpa0 17 GPIO_ACTIVE_HIGH>;
               led-gpios = <&ck_gpa0 16 GPIO_ACTIVE_HIGH>;
               debug = <0x1>;
       };
};
      
&ck_i2c0{
	npcp215x@73 {
		compatible = "npcp215x";
		dev-name = "npcp215x";
		reg = <0x73>;
		dsp_rst-gpio = <&ck_gpa0 6 GPIO_ACTIVE_HIGH>;
		amp_pdn-gpio = <&ck_gpa1 3 GPIO_ACTIVE_HIGH>;
	};

	nau8822@1a {
		compatible = "nau8822";
		dev-name = "nau8822";
		reg = <0x1a>;
	};
};
